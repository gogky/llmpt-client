FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

# Replace default Ubuntu sources with Tsinghua mirror for faster apt-get
RUN sed -i 's/archive.ubuntu.com/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/ubuntu.sources \
    && sed -i 's/security.ubuntu.com/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/ubuntu.sources \
    || sed -i 's/archive.ubuntu.com/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list \
    || true

RUN apt-get update && apt-get install -y \
    build-essential \
    python3 \
    python3-pip \
    python3-venv \
    python3-libtorrent \
    && rm -rf /var/lib/apt/lists/*

# Create a virtual environment that uses system site packages so libtorrent is available
RUN python3 -m venv --system-site-packages /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

WORKDIR /app

RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple && \
    pip install --upgrade pip

RUN pip install pytest pytest-mock requests huggingface_hub responses pytest-cov

ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
